@{
    ViewBag.Title = "Ask";
}
@model Agensi.Web.Models.Board.AskModel
@using Agensi.Core.Util;

<h2>Ask</h2>


@using (@Html.BeginForm("AskExecute", "Board", FormMethod.Post))
{
    <table class="table">
        <tr>
            <td>たいとる</td>
            <td><input type="text" name="@ClassUtil.GetName(() => Model.AskQuery.Title)" value="" /></td>
        </tr>
        <tr>
            <td>ジャンル</td>
            <td><input type="text" name="@ClassUtil.GetName(() => Model.AskQuery.TopicCategory)" value="1" /></td>
        </tr>
        <tr>
            <td>データ形式</td>
            <td><input type="text" name="@ClassUtil.GetName(() => Model.AskQuery.MediaCategory)" value="1" /></td>
        </tr>
        <tr>
            <td>言語</td>
            <td><input type="text" name="@ClassUtil.GetName(() => Model.AskQuery.LanguageId)" value="1" /></td>
        </tr>
        <tr>
            <td>テキスト</td>
            <td><input type="text" name="@ClassUtil.GetName(() => Model.AskQuery.Text)" value="1" /></td>
        </tr>
    </table>
    <button type="submit" class="btn btn-default">質問する</button>
}